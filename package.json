{
  "name": "3point-game-nhl-standing",
  "version": "0.1.0",
  "description": "Showcase what the NHL standings would be if the Games were worth 3 points",
  "keywords": [
    "NHL®",
    "IIHF®",
    "Hockey"
  ],
  "author": "romdj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/romdj/3point-game-nhl-standing/issues"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "cd graphql-server && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && npm run install:server && npm run install:frontend",
    "install:server": "cd graphql-server && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev": "npm run dev:server",
    "dev:server": "cd graphql-server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "npm run start:server",
    "start:server": "cd graphql-server && npm start",
    "test": "npm run test:server && npm run test:frontend",
    "test:server": "cd graphql-server && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "npm run test:coverage:server && npm run test:coverage:frontend",
    "test:coverage:server": "cd graphql-server && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "lint": "npm run lint:server && npm run lint:frontend",
    "lint:server": "cd graphql-server && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "check": "npm run check:server && npm run check:frontend",
    "check:server": "cd graphql-server && npm run check",
    "check:frontend": "cd frontend && npm run check",
    "clean": "npm run clean:server && npm run clean:frontend && rm -rf node_modules",
    "clean:server": "cd graphql-server && rm -rf node_modules dist",
    "clean:frontend": "cd frontend && rm -rf node_modules build .svelte-kit",
    "preview": "cd frontend && npm run preview",
    "complete-build": "clear; npm run clean; npm run install:all; npm run build; npm test",
    "semantic-release": "semantic-release",
    "prepare": "husky",
    "pre-commit": "pre-commit run --all-files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romdj/3point-game-nhl-standing.git"
  },
  "homepage": "https://github.com/romdj/3point-game-nhl-standing#readme",
  "workspaces": [
    "frontend",
    "graphql-server",
    "shared"
  ],
  "dependencies": {},
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "semantic-release": "^24.2.7",
    "husky": "^9.0.0",
    "pre-commit": "^1.2.2",
    "@eslint/js": "^9.12.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.12.0",
    "globals": "^15.0.0",
    "typescript": "^5.6.2"
  }
}
