# =============================================================================
# 3 Point Game NHL Standing - Environment Configuration
# =============================================================================

# =============================================================================
# Global Configuration
# =============================================================================
NODE_ENV=development

# =============================================================================
# NHL API Configuration
# =============================================================================
NHL_API_BASE_URL=https://api-web.nhle.com/v1

# =============================================================================
# GraphQL Server Configuration
# =============================================================================
PORT=4000
GRAPHQL_PLAYGROUND=true
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# Frontend Configuration (Vite)
# =============================================================================
VITE_GRAPHQL_URL=http://localhost:4000/graphql
VITE_DEV_MODE=true
VITE_NHL_API_BASE_URL=https://api-web.nhle.com/v1

# =============================================================================
# Development Configuration
# =============================================================================
# Set to false to disable development features
DEV_MODE=true

# =============================================================================
# Production Configuration
# =============================================================================
# Uncomment and configure for production deployment
# NODE_ENV=production
# PORT=3000
# GRAPHQL_PLAYGROUND=false
# CORS_ORIGIN=https://your-production-domain.com
# VITE_GRAPHQL_URL=https://your-production-api.com/graphql
# VITE_DEV_MODE=false
# DEV_MODE=false

# =============================================================================
# Testing Configuration
# =============================================================================
# Uncomment for testing environment
# NODE_ENV=test
# PORT=4001
# GRAPHQL_PLAYGROUND=false
# CORS_ORIGIN=http://localhost:3000
# VITE_GRAPHQL_URL=http://localhost:4001/graphql
# VITE_DEV_MODE=false
# DEV_MODE=false